doctype html
html
	head
		title jsAB test

		style.
			button { display:block; border:0; border-radius:3px; color:white; font-size:16px; padding:20px; margin:10px; }
			button { background:#2ecc71; }
			button.red { background:#e74c3c; }
			button.blue { background:#3498db; }

		//- jQuery library from Google
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')

		//- EasyAB for A/B testing
		script(src='jsab.js')

		//- Google Analytics
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-6488328-5', 'auto');

		script.
			$(function() {
				$('button').jsab({
					id: 1,
					dimensionIndex: 1,
					defaultVersion: 'green',
					versions: [{
						name: 'red',
						className: 'red'
					},{
						name: 'blue',
						className: 'blue',
						text: 'I\'m blue da ba dee dabe die'
					}]
				});
			});


	body
		button Hello world 1
